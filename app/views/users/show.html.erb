<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <table class='table'>
        <tr><%= image_tag @user.get_profile_image, size:'100x100' %></tr>
        <tr>
      	  <th>name</th>
      	  <th><%= @user.name %></th>
        </tr>
        <tr>
      	  <th>introduction</th>
      	  <th><%= @user.introduction %></th>
        </tr>
        <tr>
          <th>follows</th>
          <th><%= link_to @user.following.count, user_following_path(@user) %></th>
        </tr>
        <tr>
          <th>followers</th>
          <th><%= link_to @user.followers.count, user_followers_path(@user) %></th>
        </tr>
      </table>
      <% if current_user != @user%>
        <% if current_user.followed_by?(@user) %>
            <%= link_to "フォロー外す", user_relationships_path(@user), method: :delete, class: "btn btn-success" %>
          <% else %>
            <%= link_to "フォローする", user_relationships_path(@user), method: :post, class: "btn btn-success" %>
        <% end %>
      <% end %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books %>
    </div>
  </div>
</div>
